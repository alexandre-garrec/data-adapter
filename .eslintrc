{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "parserOptions": {
    "ecmaFeatures": {
    }
  },
  
  "rules": {
    "indent": [2, 2, { "SwitchCase": 1 }],
    "semi": [2, "never"],
    "no-case-declarations": 0,
    "eol-last": 2,
    "no-cond-assign": 2
  },
  
  "globals": {
    "it": true,
    "describe": true
  },
  
  "parser": "babel-eslint"
}
